# Production Environment Template

# Environment
GRACE_ENV=production
GRACE_DEBUG=false
VERSION=1.0.0

# Database
DATABASE_URL=postgresql://grace_prod:CHANGE_PASSWORD@postgres:5432/grace_prod
POSTGRES_DB=grace_prod
POSTGRES_USER=grace_prod
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Redis
REDIS_URL=redis://redis:6379/0

# Security - MUST CHANGE THESE
AUTH_SECRET_KEY=GENERATE_SECURE_KEY_MIN_32_CHARS
ENCRYPTION_KEY=GENERATE_BASE64_ENCODED_KEY

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
GRAFANA_PASSWORD=CHANGE_THIS_PASSWORD
GRAFANA_URL=https://grafana.yourdomain.com

# Email
SMTP_ENABLED=true
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_FROM=grace@yourdomain.com
