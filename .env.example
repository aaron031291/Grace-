# Grace Configuration Template
# Copy to .env and fill in values

# Environment
GRACE_ENV=development
GRACE_DEBUG=true

# Service
GRACE_SERVICE_NAME=grace-unified
GRACE_HOST=0.0.0.0
GRACE_PORT=8000

# Database
DATABASE_URL=postgresql://grace:password@localhost:5432/grace_db
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# Security
AUTH_SECRET_KEY=change-this-to-a-secure-random-key-minimum-32-characters
ENCRYPTION_KEY=your-base64-encoded-32-byte-encryption-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Kernels
KERNELS_ENABLED=multi_os,mldl,resilience
KERNELS_AUTO_START=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Grafana
GRAFANA_PASSWORD=admin
GRAFANA_URL=http://localhost:3000

# Email (optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=grace@example.com
