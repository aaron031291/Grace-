{
  "dashboard": {
    "id": null,
    "title": "Grace Governance Kernel Overview",
    "tags": ["governance", "system", "metrics"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "type": "stat",
        "title": "Governance Decisions",
        "datasource": "Prometheus",
        "targets": [{"expr": "decision_count", "format": "time_series"}],
        "fieldConfig": {"defaults": {"unit": "short"}},
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4}
      },
      {
        "type": "stat",
        "title": "System Uptime (s)",
        "datasource": "Prometheus",
        "targets": [{"expr": "uptime_seconds", "format": "time_series"}],
        "fieldConfig": {"defaults": {"unit": "s"}},
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4}
      },
      {
        "type": "graph",
        "title": "Decision Rate",
        "datasource": "Prometheus",
        "targets": [{"expr": "rate(decision_count[5m])", "format": "time_series"}],
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 6}
      },
      {
        "type": "table",
        "title": "Component Health",
        "datasource": "Prometheus",
        "targets": [{"expr": "component_health", "format": "table"}],
        "gridPos": {"x": 0, "y": 10, "w": 12, "h": 6}
      }
    ]
  }
}
