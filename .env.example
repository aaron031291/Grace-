# Grace AI System - Environment Configuration
# Open Source Configuration Only

# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=sqlite:///./grace.db
# DATABASE_URL=postgresql://grace:password@localhost/grace_db

# Authentication
AUTH_SECRET_KEY=your-super-secret-key-min-32-chars
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Embedding Provider (Open Source Only)
EMBEDDING_PROVIDER=huggingface  # Options: huggingface, local

# [REMOVED] EMBEDDING_OPENAI_API_KEY - no longer needed

# HuggingFace Configuration
EMBEDDING_HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Store
VECTOR_TYPE=faiss
VECTOR_FAISS_INDEX_PATH=./data/vectors/grace_index.bin

# Features
SWARM_ENABLED=false
TRANSCENDENCE_QUANTUM_ENABLED=false
TRANSCENDENCE_DISCOVERY_ENABLED=false
TRANSCENDENCE_IMPACT_ENABLED=false

# Observability
OBSERVABILITY_LOG_LEVEL=INFO
OBSERVABILITY_METRICS_ENABLED=true
