# Development Dockerfile with hot reload and debugging

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    postgresql-client \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt setup.py setup.cfg pyproject.toml ./
COPY grace/__init__.py grace/__init__.py

RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -e ".[dev]" && \
    pip install --no-cache-dir debugpy ipython

# Copy application code
COPY . .

# Expose ports
EXPOSE 8000 5678

# Development command (override in docker-compose)
CMD ["uvicorn", "grace.api:create_app", "--factory", "--reload", "--host", "0.0.0.0", "--port", "8000"]
