# Grace AI System - Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://grace_user:your_password_here@localhost:5432/grace_db
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=

# Grace Configuration
GRACE_ENV=development  # development, staging, production
GRACE_LOG_LEVEL=INFO
GRACE_ENABLE_METRICS=true

# Monitoring (optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_ENABLED=false

# Memory System
MEMORY_CACHE_TTL=3600
MEMORY_EMBEDDING_FALLBACK=true
MEMORY_MAX_CACHE_SIZE=1000

# Health Monitoring
HEALTH_CHECK_INTERVAL=60
AVN_REPORTING_ENABLED=true
