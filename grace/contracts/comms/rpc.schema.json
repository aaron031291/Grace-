{
  "$id": "grace://comms/rpc.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Grace RPC Contracts",
  "type": "object",
  "oneOf": [
    {
      "title": "Command",
      "properties": {
        "kind": { "const": "command" },
        "action": { "type": "string" },
        "params": { "type": "object" }
      },
      "required": ["kind","action"]
    },
    {
      "title": "Query",
      "properties": {
        "kind": { "const": "query" },
        "query": { "type": "string" },
        "params": { "type": "object" }
      },
      "required": ["kind","query"]
    },
    {
      "title": "Reply",
      "properties": {
        "kind": { "const": "reply" },
        "status": { "enum": ["ok","error","partial"] },
        "data":   { "type": "object" },
        "error":  { 
          "type": "object", 
          "properties": {
            "code":{"type":"string"},
            "message":{"type":"string"},
            "retry_after_ms":{"type":"integer"}
          }
        }
      },
      "required": ["kind","status"]
    }
  ]
}