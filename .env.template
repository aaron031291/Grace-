# Grace Governance Environment Configuration
# Copy this to .env and fill in your API keys

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration
DATABASE_URL=postgresql://grace_user:grace_pass@localhost:5432/grace_governance
REDIS_URL=redis://:grace_redis_pass@localhost:6379
CHROMA_URL=http://localhost:8000

# Vector Database Configuration
CHROMA_COLLECTION_NAME=grace_vectors
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSIONS=384

# Grace Core Configuration
GRACE_INSTANCE_ID=grace_main_001
GRACE_VERSION=1.0.0
GRACE_LOG_LEVEL=INFO
GRACE_DEBUG=false

# Service Configuration
API_HOST=0.0.0.0
API_PORT=8080
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8081

# Security Configuration  
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars
API_KEY_HEADER=X-Grace-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Governance Configuration
GOVERNANCE_STRICT_MODE=true
CONSTITUTIONAL_ENFORCEMENT=true
AUTO_ROLLBACK_ENABLED=true
PARLIAMENT_QUORUM_THRESHOLD=0.6
TRUST_SCORE_THRESHOLD=0.7

# MLDL Configuration
MLDL_MIN_SPECIALISTS=3
MLDL_MAX_SPECIALISTS=5
MLDL_CONSENSUS_THRESHOLD=0.65
MLDL_TIMEOUT_SECONDS=30

# Monitoring & Telemetry
ENABLE_TELEMETRY=true
ENABLE_HEALTH_MONITORING=true
METRICS_EXPORT_INTERVAL=30
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=10

# Audit & Logging
AUDIT_LOG_RETENTION_DAYS=90
STRUCTURED_LOGGING=true
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn_here_optional

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
MEMORY_CACHE_SIZE_MB=512
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# Development Settings
DEV_MODE=false
MOCK_AI_RESPONSES=false
ENABLE_MOCK_SERVICES=false
HOT_RELOAD=false

# Container Settings (for Docker deployment)
CONTAINER_MEMORY_LIMIT=2g
CONTAINER_CPU_LIMIT=2
GRACEFUL_SHUTDOWN_TIMEOUT=30